{

	"manifest_version": 2,

		"name": "TritonPal",
		"description": "TritonPal is your friend yo",
		"version": "0.1",

		"icons": {
			"48": "./icons/48.png"
		},

		"background" : {
			"scripts" : [
				"./background.js"
			],
			"persistant":false
		},

		"permissions" : [
			"https://calhacks3twitter.herokuapp.com/*",
			"notifications",
			"storage"
			],


		"content_scripts": [
		{
			"matches":
				["http://*/*", "https://*/*"]
				,
			"js": ["./apps/highlight/inject.js"]
		},
		{
			"matches":
				["https://act.ucsd.edu/studentDars/view"],
				"js" : ["./apps/pretty/inject.js"]
		},
		{
			"matches":
				["https://act.ucsd.edu/webreg2/*"],
				"js" : ["./apps/calendar/inject.js"]
		}
	],

		"chrome_url_overrides" : {
			"newtab": "./apps/newtab/landing.html"
		},

		"content_security_policy": "script-src 'self' https://platform.twitter.com/js/timeline.af7715ccfd05761b10e680b0b0b2117b.js https://cdn.syndication.twimg.com/timeline/profile https://vortex.accuweather.com/adc2010/oap/javascript/jquery-1.9.1.min.js; object-src 'self'",

		"browser_action": {
			"default_icon": "icons/48.png",
			"default_popup":"popup/popup.html"
		}
}
